#include <iostream>
#include <string.h>
using namespace std;
int main()
{
char str[100];
int i,vowels=0;
cout<<"Enter the string : ";
cin.getline(str, 150);
for(int i = 0; str[i]!='\0'; i++)
{
if(str[i]=='a' || str[i]=='e' || str[i]=='i' ||

str[i]=='o' || str[i]=='u' || str[i]=='A' ||
str[i]=='E' || str[i]=='I' || str[i]=='O' ||
str[i]=='U')
{
vowels++;
}
}

cout<<"\nTotal number of vowels in the string = "<<vowels;
return 0;
}
